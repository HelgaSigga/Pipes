<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.quima.pipes.InfoChoice"
    android:background="#0a2615e3">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hvaða upplýsingar viltu sjá?"
        android:id="@+id/textView"
        android:textColor="#ff000000"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:text="Allt Bæjarfélag"
        android:textColor="#ffffffff"
        android:id="@+id/database"
        android:background="@xml/bevel_button"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Veldu svæði:"
        android:id="@+id/textView4"
        android:textColor="#ff000000"
        android:layout_marginTop="25dp"/>

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:spinnerMode="dropdown"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leita"
        android:textColor="#ffffffff"
        android:id="@+id/searchByAreaButton"
        android:background="@xml/bevel_button"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Eða gerðu almenna leit:"
        android:id="@+id/textView3"
        android:textColor="#ff000000"
        android:layout_marginTop="25dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/address"
        android:text=""
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true" />


    <Button
        android:layout_width="198dp"
        android:layout_height="wrap_content"
        android:text="Leit eftir (hluta úr) orði"
        android:textColor="#ffffffff"
        android:id="@+id/search"
        android:layout_centerHorizontal="true"
        android:background="@xml/bevel_button"/>

    <Button
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:text="Leit að heimilisfangi"
        android:textColor="#ffffffff"
        android:id="@+id/addressBtn"
        android:background="@xml/bevel_button" />


</LinearLayout>
