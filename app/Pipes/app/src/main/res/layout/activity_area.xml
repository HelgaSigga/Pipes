<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.quima.pipes.Area">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hvaða svæði viltu skoða?"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Svæði 1"
        android:id="@+id/area1"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="49dp"
        android:layout_alignRight="@+id/area4"
        android:layout_alignEnd="@+id/area4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Svæði 2"
        android:id="@+id/area2"
        android:layout_alignTop="@+id/area1"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Svæði 3"
        android:id="@+id/area3"
        android:layout_alignTop="@+id/area2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Svæði 4"
        android:id="@+id/area4"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Svæði 5"
        android:id="@+id/area5"
        android:layout_alignTop="@+id/area4"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Svæði 6"
        android:id="@+id/area6"
        android:layout_alignTop="@+id/area5"
        android:layout_alignLeft="@+id/area3"
        android:layout_alignStart="@+id/area3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Svæði 7"
        android:id="@+id/area7"
        android:layout_alignTop="@+id/area8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Svæði 8"
        android:id="@+id/area8"
        android:layout_alignTop="@+id/area9"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Svæði 9"
        android:id="@+id/area9"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/area6"
        android:layout_alignStart="@+id/area6"
        android:layout_marginBottom="56dp" />
</RelativeLayout>
