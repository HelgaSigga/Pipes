<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Start"
    android:id="@+id/start"
    android:background="#0a2615e3">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Listi yfir loka "
        android:id="@+id/database"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/info"
        android:layout_centerHorizontal="true"
        android:background="@xml/bevel_button"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="     Vinsamlega veljið þær upplýsingar sem þið viljið sjá"
        android:id="@+id/info"
        android:textColor="#ff000000"
        android:layout_marginTop="46dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/emergency_text"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=" Senda skilaboð til notenda       "
        android:id="@+id/emergency_text"
        android:textColor="#ff000000"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/message_button"
        android:background="@xml/bevel_button"
        android:text="  Skilaboð  "
        android:textColor="#ffffffff"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/emergency_text"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
